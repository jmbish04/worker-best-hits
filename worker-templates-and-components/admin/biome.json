{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "off",
        "organizeImports": "off"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "examples/**",
      "openai-sdk/**",
      "packages/**",
      "guides/**",
      "!node_modules",
      "!**/node_modules",
      "!dist",
      "!**/dist",
      "!.wrangler",
      "!**/.wrangler",
      "!wrangler.jsonc",
      "!**/wrangler.jsonc",
      "!./tsconfig.base.json",
      "!**/tsconfig.base.json",
      "!**/normalize.css",
      "!package.json",
      "!**/package.json",
      "!package-lock.json"
    ]
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "tab"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noImportantStyles": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "recommended": true,
      "style": {
        "noInferrableTypes": "error",
        "noNonNullAssertion": "off",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "off",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
